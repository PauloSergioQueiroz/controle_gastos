<%= form_for(item) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-lg-8">
    <%= f.label :nome, :class=>'control-label' %>
    <%= f.text_field :nome, :class=>'form-control'  %>
  </div>

  <div class="col-lg-8">
    <%= f.label :tipo, :class=>'control-label' %>
     <%= f.select(:tipo, Item.tipo.options, {}, class:"form-control" ) %>
  </div>

  <div class="col-sm-8">
    <%= f.label :descricao, :class=>'control-label' %>
    <%= f.text_field :descricao, :class=>'form-control' %>
  </div>

  <div class="col-sm-8 form-group">
    <%= f.label :frequencia, :class=>'control-label' %>
    <%= f.select(:frequencia, Item.frequencia.options, {}, class:"form-control" ) %>
  </div>

  <div class="col-sm-8">
    <%= f.label :dia_semana, :class=>'control-label' %>
   <%= f.select(:dia_semana, Item.dia_semana.options, {include_blank:  true}, class:"form-control" ) %>
  </div>

  <div class="col-sm-8">
    <%= f.label :dia_mes, :class=>'control-label' %>
    <%= f.text_field :dia_mes, :class=>'form-control' %>
  </div>

  <br>
  <div class="col-sm-8">
    <%= f.submit 'Salvar', :class=>'btn' %>
  </div>
<% end %>
